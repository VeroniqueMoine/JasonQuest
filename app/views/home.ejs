<%- include('partials/header')%>
  
  <!-- Main section -->
  <main>
    
    <!-- New member form -->
    <h2 class="add-member-title">Ajouter un(e) Argonaute</h2>
    <% if (locals.error) { %> 
      <p class="error"><%=error%></p>
      <% }  %> 
    <% if (locals.succeed) { %> 
      <p class="error"><%=succeed%></p>
      <% }  %> 
    <form class="new-member-form" action="/argonaute" method="POST">
      <label for="name">Nom de l&apos;Argonaute</label>
      <input id="name" name="name" type="text" placeholder="Charalampos" />
      <button class="button-form" type="submit">Envoyer</button>
    </form>
    
    <!-- Member list -->
    <h2>Membres de l'Ã©quipage</h2>
   
    <section class="member-list">
    <% for (const argonaute of listOfArgonautes) { %> 
    <section class="member-list">
      <div class="member-item"><%= argonaute.name %></div>
    </section>
    <% } %>
  </main>

